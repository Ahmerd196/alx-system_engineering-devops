#!/usr/bin/env bash
# Terminating SSL on HAproxy

# Install certbot
apt-get update
apt-get install -y certbot

# Generate SSL certificate using certbot
certbot certonly --standalone --preferred-challenges http -d www.holberton.online

# Configure HAProxy
cat > /etc/haproxy/haproxy.cfg << EOF
global
    daemon
    maxconn 256

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http_front
    bind *:80
    reqadd X-Forwarded-Proto:\ http
    default_backend http_back

frontend https_front
    bind *:443 ssl crt /etc/letsencrypt/live/www.holberton.online/fullchain.pem
    reqadd X-Forwarded-Proto:\ https
    default_backend http_back

backend http_back
    balance roundrobin
    server web-01 10.0.0.1:80 check
    server web-02 10.0.0.2:80 check

backend https_back
    balance roundrobin
    server web-01 10.0.0.1:80 check
    server web-02 10.0.0.2:80 check

frontend http_redirect
    bind *:80
    redirect scheme https if !{ ssl_fc }

frontend https_redirect
    bind *:443 ssl crt /etc/letsencrypt/live/www.holberton.online/fullchain.pem
    redirect scheme https if !{ ssl_fc }

EOF

# Restart HAProxy
service haproxy restart
